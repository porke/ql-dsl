<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Presentation.Views.Questions">
    <Style x:Key="QLSStyle" TargetType="Control">
        <Setter Property="Foreground" Value="{Binding Style.Foreground}"/>
        <Setter Property="FontSize" Value="{Binding Style.FontSize}"/>
        <Setter Property="FontFamily" Value="{Binding Style.FontFamily}"/>
        <Setter Property="Width" Value="{Binding Style.Width}"/>
    </Style>
</ResourceDictionary>
    